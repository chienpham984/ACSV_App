@model IEnumerable<testsignalr.Models.ModelView.KhoaHocItem>
@{
    ViewBag.Title = "TaoKhoaHocMoi";
    Layout = "~/Areas/Administrator/Views/Shared/Layout.cshtml";
}



@using (Html.BeginForm("SaveNewCourse", "KhoaHoc", FormMethod.Post, htmlAttributes: new { enctype = "multipart/form-data" }))
{
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-body">
                        <div class="row dandong">
                            <div class="col-md-2">Tên khóa học</div>
                            <div class="col-md-10">
                                <textarea type="text" style="border-radius:5px; width:100%;"
                                          required value="" id="TenKhoaHoc" name="TenKhoaHoc" placeholder="Nhập tên khóa học vào đây"></textarea>
                            </div>
                        </div>
                        <div class="row dandong">
                            <div class="col-md-2">
                                Ngày bắt đầu
                            </div>
                            <div class="col-md-4" style="text-align:left;">
                                <input type="date" id="TuNgay" name="TuNgay" style="border-radius:5px;" required />
                            </div>
                            <div class="col-md-2">
                                Ngày kết thúc
                            </div>
                            <div class="col-md-4" style="text-align:left;">
                                <input type="date" id="DenNgay" name="DenNgay" style="border-radius:5px;" required />
                            </div>
                        </div>
                        <div class="row dandong">
                            <div class="col-md-2">Chứng chỉ</div>
                            <div class="col-md-10">
                                <select id="MaChungChi" name="MaChungChi" required>
                                    <option value="" selected>---Chọn Chứng chỉ--- </option>
                                    @foreach (var item in ViewBag.dsChungChi)
                                    {
                                        <option value="@item.Id">@item.MaChungChi  -  @item.TenChungChi.Trim()</option>
                                    }
                                </select>
                             
                            </div>
                        </div>

                        <div class="row dandong">
                            <div class="col-md-2">
                                Ngày cấp
                            </div>
                            <div class="col-md-4" style="text-align:left;">
                                <input type="date" id="NgayCap" name="NgayCap" style="border-radius:5px;" required />
                            </div>
                            <div class="col-md-2">
                                Ngày hết hạn
                            </div>
                            <div class="col-md-4" style="text-align:left;">
                                <input type="date" id="NgayHetHan" name="NgayHetHan" style="border-radius:5px;" required />
                            </div>
                        </div>

                        <div class="row dandong">
                            <div class="col-md-2">Giáo Viên phụ trách</div>
                            <div class="col-md-10">
                                <select id="MaGiaoVien" name="MaGiaoVien" required>
                                    <option value="" selected>---Chọn giáo viên--- </option>
                                    @foreach (var item in ViewBag.dsGiaoVien)
                                    {
                                        <option value="@item.Id">@item.TenGiaoVien.Trim()</option>
                                    }
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12" style="text-align:center;">
                            <hr>
                            <input type="submit" value="Thêm mới" class="btn btn-success" />
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
}
<script type="text/javascript">
    $(document).ready(function () {
        $('#MaChungChi').select2({
            allowClear: true,
            placeholder: 'Chọn Chứng chỉ',
            minimumInputLength: 1 // Số ký tự tối thiểu để bắt đầu tìm kiếm
        });
        $('#MaGiaoVien').select2({
            allowClear: true,
            placeholder: 'Chọn Chứng chỉ',
            minimumInputLength: 1 // Số ký tự tối thiểu để bắt đầu tìm kiếm
        });
    });
</script>