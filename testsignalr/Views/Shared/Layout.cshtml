<script type="text/javascript">

    $(document).ready(function () {
        //get img va so luong
        $.ajax({
            type: 'GET',
            url: "/Main/getInformation",
            data: {},
            async: false,
            contentType: 'application/html ; charset:utf-8',
            dataType: 'json',
            success: function (Data) {
                if (Data.filePath != "")
                    $("#imgavatar").attr("src", Data.filePath);
                if (Data.totalAlert != "")
                    $("#totalAlert").html(Data.totalAlert);

                $("#CompanyName").html("Chào mừng bạn đến với " + Data.companyName);
            },
            error: function () {

            }
        });
    });

</script>