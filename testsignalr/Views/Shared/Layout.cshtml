<body>
    <div class="mainwrapper">
        <header class="header-top" header-theme="light">
            <div class="container-fluid headerPage">
                <div style="display:flex; justify-content:space-between; padding-top:10px;">
                    <div style="width:70%;">
                        <div class="input-group searchArea" id="CompanyName" style="display: flex; justify-content: center; align-items: center;">
                            <span class="ContentTitle"> @ViewBag.FlightTitle</span>
                        </div>
                    </div>
                    <div class="menuIcon">
                        <i class="fas fa-bars menubaricon"></i>
                    </div>
                    <div class="user-profile">
                        <span id="totalAlert"></span> <i class="fa-solid fa-bell chuong"></i>
                        @if (Session["Avatar"]==null || Session["Avatar"].ToString() == "")
                        {
                            <img src="~/Content/img/user.jpg" class="rounded-circle" id="imgavatar" alt="Cinque Terre" width="30" height="30" style="border: solid 2px #2677b6; background-color: #2677b6; ">
                        }
                        else
                        {
                            <img src="@Session["Avatar"].ToString()" class="rounded-circle" id="imgavatar" alt="Cinque Terre" width="30" height="30" style="border: solid 2px #2677b6; background-color: #2677b6; ">
                        }
                        <div class="profile-options" id="profile-options">
                            <ul>
                                <li><i class="fas fa-user"></i><a href="/User/ViewProfile/">User Information</a></li>
                                <li><i class="fas fa-unlock-alt"></i><a href="/User/ChangePassword">Change password</a></li>
                                <li><a href="/LoginDocumenManagement/Logout/"><i class="fas fa-sign-out-alt"></i> <span>Sign out</span></a> </li>
