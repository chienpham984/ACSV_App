@model List<testsignalr.Models.ModelView.KhoaHocModal>
@{
    ViewBag.Title = "ShowUserCategory";
    Layout = "~/Views/Shared/Layout.cshtml";
    int i = 0;
}


@if (Model.Count != 0)
{
    <div class="clearfix vi-header">
        <h4 class="vi-left-title pull-left">Danh sách khóa học đã tham gia</h4>
    </div>
    <table class="table table-bordered" style="width:100%;">
        <tr style="background-color:lightcyan;">
            <th>No.</th>
            <th>Tên khóa học</th>
            <th>Thời gian đào tạo</th>
            <th>Giáo viên</th>
            <th>Hình thức đào tạo</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            i++;
            <tr>
                <td>
                    <p>
                        <a href="#">
                            <span class="glyphicon glyphicon-grain"></span>
                        </a>
                        @i
                    </p>
                </td>
                <td>@item.TenKhoaHoc.Trim() </td>
                <td>@item.ThoiGian</td>
                <td>@item.TenGiaoVien.Trim()</td>
                <td>@item.HinhThucDaoTao.Trim()</td>
                <td>@Html.ActionLink("Tham gia", "JoinTheCourse", "TrainingCourse", new { CourseId = item.Id }, new { @class = "btn btn-primary" }) </td>
            </tr>
        }
    </table>
}
else
{
    <div class="clearfix vi-header">
        <h4 class="vi-left-title pull-left">Chưa có khóa học nào của bạn đã hoàn thành</h4>
    </div>
}
